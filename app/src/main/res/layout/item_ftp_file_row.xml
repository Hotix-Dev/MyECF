<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_item_ftp_file_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless">

        <!-- Color Layout Left -->
        <RelativeLayout
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimaryDark" />

        <!-- Color Layout Right -->
        <RelativeLayout
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimaryDark" />

        <!-- File Icon -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_ftp_file_icon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/logo" />

        <!-- File Title -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_ftp_file_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toEndOf="@id/img_ftp_file_icon"
            android:text="Title"
            android:textColor="@color/light_bg_dark_primary_text"
            android:textSize="@dimen/_12ssp" />

        <!-- File Size -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_ftp_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:text="Size"
            android:textColor="@color/light_bg_dark_secondary_text"
            android:textSize="@dimen/_10ssp" />

        <!-- Bottom Divider -->
        <View
            android:id="@+id/bottom_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark" />

    </RelativeLayout>

</RelativeLayout>
